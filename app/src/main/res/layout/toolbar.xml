<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
    android:layout_height="@dimen/height60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/secondary_light"
    app:cardCornerRadius="@dimen/cornerRadius0dp"
    app:cardElevation="@dimen/elevation0dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="@dimen/width80dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="@drawable/logo_layer_1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/iconSize30dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/logo_layer_2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_logo" />

        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/profileIcon"
            android:layout_width="@dimen/height40dp"
            android:layout_height="@dimen/height40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin15p"
            app:cardCornerRadius="@dimen/cornerRadius45dp"
            app:cardElevation="@dimen/elevation0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image_avatar" />

        </com.google.android.material.card.MaterialCardView>

        <View
            android:id="@+id/profileIconDivider"
            android:layout_width="@dimen/width1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin15p"
            android:layout_toStartOf="@id/profileIcon"
            android:background="@color/dark_grey" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin25p"
            android:layout_toStartOf="@id/profileIconDivider"
            android:src="@drawable/ic_icon_sun" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>